@model EmpApp.Models.LeaveViewModel
@{
    IEnumerable <String> employees = ViewData["Employee"] as IEnumerable<String>;
}
<br /><br />
<form asp-action="Create" method="Post">
    <div class="form-horizontal">
            <div class="form-group">
                <label asp-for="EmployeeName" class="col-lg-2 col-sm-3 control-label"></label>
                <div class="col-lg-3">
                    <select class="form-control" asp-for="EmployeeName"
                            asp-items="@(new SelectList(employees))">
                        <option>--Select employee--</option>
                    </select>
                    <span asp-validation-for="EmployeeName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="col-lg-2 col-sm-3 control-label"></label>
                <div class="col-lg-3">
                    <input type="date" asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="col-lg-2 col-sm-3 control-label"></label>
                <div class="col-lg-3">
                    <input type="date" asp-for="EndDate" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ApprovalStatus" class="col-lg-2 col-sm-3 control-label"></label>
                <div class="col-lg-3">
                    <input asp-for="ApprovalStatus" class="form-control" value="Waiting Approval" />
                </div>
            </div>

        </div>
    </div>


    <input type="submit" value="Save" class="col-lg-2 col-md-offset-2 btn btn-success" /> <br />

</form>