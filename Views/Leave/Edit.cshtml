@model EmpApp.Models.Leave

<br/><br/>
<form asp-action="Edit" method="Post">
     <div class="form-horizontal">
         <div class="row">
             <div class="hidden">
                 <label asp-for="LeaveId" class="col-lg-2 col-sm-3 control-label"></label>
                 <div class="col-lg-3">
                     <input asp-for="LeaveId" class="form-control" />
                     <span asp-validation-for="LeaveId" class="text-danger"></span>
                 </div>
             </div>
             <div class="form-group">
                 <label asp-for="StartDate" class="col-lg-2 col-sm-3 control-label"></label>
                 <div class="col-lg-3">
                     <input asp-for="StartDate" class="form-control" />
                     <span asp-validation-for="StartDate" class="text-danger"></span>
                 </div>
             </div>
             <div class="form-group">
                 <label asp-for="EndDate" class="col-lg-2 col-sm-3 control-label"></label>
                 <div class="col-lg-3">
                     <input asp-for="EndDate" class="form-control" />

                 </div>
             </div>
             <div class="form-group">
                 <label asp-for="ApprovalStatus" class="col-lg-2 col-sm-3 control-label"></label>
                 <div class="col-lg-3">
                     <input asp-for="ApprovalStatus" class="form-control" />

                 </div>
             </div>
         </div>
     </div>
        <input type="submit" value="Update" class="col-lg-2 col-md-offset-2 btn btn-success" /> <br/>

</form>